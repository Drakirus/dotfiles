# zoom and scroll step size
set zoom-step 15
set scroll-step 30

# copy selection to system clipboard
set selection-clipboard clipboard

# enable incremental search
set incremental-search true

set window-height 1024
set window-width 1068
set adjust-open width
set guioptions sv

set adjust-open	width
# smooth scrolling via touchpad
set smooth-scroll true

set first-page-column 1:1

set guioptions hv

map <C-e> scroll half-down
map <C-y> scroll half-up

map [fullscreen] W adjust_window width
map [normal] W adjust_window width
map [fullscreen] E adjust_window best-fit
map [normal] E adjust_window best-fit

map [normal] f toggle_fullscreen
map [fullscreen] f toggle_fullscreen

map [normal]     [ rotate rotate-ccw
map [fullscreen]     [ rotate rotate-ccw
map [fullscreen] ] rotate rotate-cw
map [normal] ] rotate rotate-cw

map [normal]     r reload
map [fullscreen] r reload

map [normal] F follow
map [fullscreen] F follow
map [normal] <S-Return> toggle_statusbar
map [fullscreen] <S-Return> toggle_statusbar
map [normal] i recolor
map [fullscreen] i recolor

map [normal] ; focus_inputbar :
map [fullscreen] ; focus_inputbar :

map [normal] <A-f> focus_inputbar ":! firefox %"
map [fullscreen] <A-f> focus_inputbar ":! firefox %"

map [normal] <C-p> focus_inputbar ":open "
map [fullscreen] <C-p> focus_inputbar ":open "

# setting recolor-keep true will keep any color your pdf has.
# if it is false, it'll just be black and white

set window-icon acroread
set window-title-basename true
set window-title-page true

set statusbar-h-padding 1
set statusbar-v-padding 1

set font "hack 10"
# set guioptions ""
# set statusbar-basename true

# colors

set default-bg                  "#fdf6e3"
set default-fg                  "#eee8d5"

set statusbar-fg                "#d19700"
set statusbar-bg                "#eee8d5"

set inputbar-bg                 "#fdf6e3"
set inputbar-fg                 "#002b36"

set notification-bg             "#fdf6e3"
set notification-fg             "#002b36"

set notification-error-bg       "#fdf6e3"
set notification-error-fg       "#dc322f"

set notification-warning-bg     "#fdf6e3"
set notification-warning-fg     "#dc322f"

set highlight-color             "#b58900"
set highlight-active-color      "#268bd2"

set completion-bg               "#eee8d5"
set completion-fg               "#063642"

set completion-highlight-bg     "#eee8d5"
set completion-highlight-fg     "#e03242"

set recolor-lightcolor          "#fdf6e3"
set recolor-darkcolor           "#073642"

set index-bg "#fdf6e3"
set index-fg "#586e75"
set index-active-bg "#eee8d5"
set index-active-fg "#e03242"

set recolor                     true
set recolor-keephue "false"
